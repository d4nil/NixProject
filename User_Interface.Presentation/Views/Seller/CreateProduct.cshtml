@model Domain.Core.Product
@{
    ViewData["Title"] = "CreateProduct";
}
<h1>Создание нового товара</h1>
<form asp-action="CreateProduct" asp-controller="Seller">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="PName" class="control-label">Название</label>
        <input type="text" asp-for="PName" class="form-control" />
        <span asp-validation-for="PName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductDescription" class="control-label">Описание</label>
        <input type="text" asp-for="ProductDescription" class="form-control" />
        <span asp-validation-for="ProductDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cost" class="control-label">Цена</label>
        <input type="number" asp-for="Cost" class="form-control" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Condition" class="control-label">Состояние</label>
        <select asp-for="Condition" class="control-label">
            <option>Новый</option>
            <option>Б/У</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Category">Категория</label>
        <select asp-for="Category.CategoryId" asp-items="@ViewBag.Categories"></select>
        <span asp-validation-for="Category" class="text-danger"></span>
        <p></p>
        <label asp-for="Subcategory">Подкатегория</label>
        <select  asp-for="Subcategory.CategoryId" asp-items="@ViewBag.SubCategories"></select>
        <span asp-validation-for="Subcategory" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Producer">Производитель</label>
        <select asp-for="Producer.ProducerId" asp-items="@ViewBag.Producers"></select>
    </div>
    <div>
        <input type="hidden" asp-for="UserId" value="@ViewBag.Id" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-default" />

    </div>
</form>
