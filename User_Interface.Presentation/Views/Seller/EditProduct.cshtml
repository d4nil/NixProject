@model ProductViewModel

@{
    ViewData["Title"] = "EditProduct";
}

<h1>Изменение товара</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditProduct" asp-route-id="@ViewBag.SelId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PName" class="control-label"></label>
                <input asp-for="PName" class="form-control" />
                <span asp-validation-for="PName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Condition" class="control-label"></label>
                <input asp-for="Condition" class="form-control" />
                <span asp-validation-for="Condition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubCategory">Категория</label>
                <select asp-for="Category.CategoryId"asp-items="ViewBag.Categories">
                </select>
                <p></p>
                <label asp-for="SubCategory">Подкатегория</label>
                <select asp-for="SubCategory.CategoryId" asp-items="ViewBag.SubCategories"></select>
            </div>
            <div class="form-group">
                <label asp-for="Producer">Производитель</label>
                <select asp-for="Producer.ProducerId" asp-items="ViewBag.Producers"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



