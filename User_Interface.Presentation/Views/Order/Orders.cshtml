@using Domain.Core
@model IEnumerable<Order>

@{
    ViewData["Title"] = "Orders";
}
<h1>Заказы</h1>
<div class="row">
    <div class="col">
        Имя
    </div>
    <div class="col">
        Город
    </div><div class="col">
        Дата
    </div><div class="col">
        Адрес
    </div><div class="col">
        Комментарий
    </div><div class="col">
        Цена
    </div>
    <div class="col">
        Название товара
    </div>
    <div class="col">
        Количество товара
    </div>
    <div class="col">
    </div>
    <div class="col">
    </div>
</div>

@foreach (var o in Model)
{
<div class="row">
    <div class="col">
        @o.Name
    </div>
    <div class="col">
        @o.City.city
    </div>
    <div class="col">
        @o.Date
    </div>
    <div class="col">
        @o.Address
    </div>
    <div class="col">
        @o.Comment
    </div>
    <div class="col">
        @o.SumCost
    </div>
    <div class="col">
        @foreach (var c in o.lines)
        {
                @c.Product.PName
        }
    </div>
    <div class="col">
        @foreach (var c in o.lines)
        {
                @c.Quantity
        }
    </div>
        <div class="col">
            <a asp-action="Index" asp-controller="Order" asp-route-id="@o.OrderId" style="font-size:small"  class="btn btn-success">
                Просмотр Заказа
            </a>
        </div>
        <div class="col">
            <a asp-action="Edit" asp-controller="Order" asp-route-id="@o.OrderId" style="font-size:small" class="btn btn-success">
                Изменить 
            </a>
        </div>
    </div>
}