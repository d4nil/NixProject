@using Domain.Core
@model IEnumerable<Order>

@{
    ViewData["Title"] = "Orders";
}
<h1>Заказы</h1>
<div class="row">
    <div class="col">
        Название
    </div><div class="col">
        Цена
    </div><div class="col">
        Категория
    </div><div class="col">
        Состояние
    </div><div class="col">
        Производитель
    </div><div class="col">
        Продавец
    </div>
</div>

@foreach (Order o in Model)
{
<div class="row">
    <div class="col">
        @o.Name
    </div>
    <div class="col">
        @o.City.city
    </div>
    <div class="col">
        @o.Date
    </div>
    <div class="col">
        @o.Address
    </div>
    <div class="col">
        @o.Comment
    </div>
    <div class="col">
        @o.SumCost
    </div>
    <div class="col">
        @foreach (Cartline c in o.lines)
        {
            <div class="col">
                @c.Product
            </div>
            <div class="col">
                @c.Quantity
            </div>
        }
    </div>
    <div class="col">
        <form asp-action="Index" asp-controller="Order" asp-route-id="@o.OrderId">
            <div>
                <input type="submit" class="btn btn-success" value="Просмотр заказа" />
            </div>
        </form>
    </div>
    <div class="col">
        <form asp-action="Edit" asp-controller="Order" asp-route-id="@o.OrderId">
            <div>
                <input type="submit" class="btn btn-success" value="Изменить" />
            </div>
        </form>
    </div>
</div>
}